{
    "manifest_version": 3,
    "name": "Youtube Video Note Taker",
    "version": "1.0",
    "description": "Generate Organized Notes from YouTube",
    "action": {
        "default_title": "Download from YouTube",
        "default_popup": "popup.html"
    },
    "permissions": [
        "downloads",
        "storage",
        "tabs",
        "scripting",
        "activeTab"
    ], 
    "host_permissions": ["https://llama.k8s-gosha.atlas.illinois.edu/*"],
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    }
}